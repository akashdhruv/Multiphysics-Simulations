# YAML configuration file for `jobrunner`.

# job configuration for setting up and submitting jobs,
# archive and clean artifacts, defining target and input scripts
job:
  target: flashx
  setup:
    - flashOptions.sh
    - flashBuild.sh
  submit:
    - flashRun.sh
  archive:
    - amrex.pc
    - flash.par
    - "INS*"
    - "*_hdf5_*"
    - "*.log"
  clean:
    - flash.par
    - "INS*"
    - "*_hdf5_*"
    - "*.log"
    - "unitTest*"
    - "*.out"
    - "*.log"
    - flashx
    - amrex.pc
